@using ACC.ViewModels
@model InsertMemberVM

<!DOCTYPE html>
<html>
<head>
    <title>Account Members</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="d-flex">
       
        <!-- Main Content -->
        <div class="container-fluid p-4">
            <h2>Account members</h2>
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addMemberModal">+ Add members</button>
            <div class="d-flex justify-content-between my-3">
                <input type="text" class="form-control w-25" placeholder="Search by name or email">
                <button class="btn btn-outline-secondary">Export</button>
            </div>

            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Status</th>
                        <th>Company</th>
                        <th>Default Role</th>
                        <th>Access Level</th>
                        <th>Added On</th>
                    </tr>
                </thead>
                <tbody>
                   
                </tbody>
            </table>
        </div>
    </div>

    <!-- Add Member Modal -->
    <div class="modal fade" id="addMemberModal" tabindex="-1" aria-labelledby="addMemberModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addMemberModalLabel">Add account members</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form asp-action="InsertMember" asp-controller="Member">
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Enter or copy and paste email addresses *</label>
                            <textarea class="form-control" Asp-for="Email" rows="2" placeholder="person@company.com"></textarea>
                        </div>
                        <div class="mb-3">
                            <label asp-for="CompanyId" class="form-label">Company</label>
                            <select class="form-select" asp-for="CompanyId">
                                <option selected>Apply to all members (optional)</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label asp-for="RoleId" class="form-label">Default role</label>
                            <select class="form-select" asp-for="RoleId">
                                <option selected>Apply to all members (optional)</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Access level</label>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" asp-for="adminAccess">
                                <label class="form-check-label" asp-for="adminAccess">Account administrator</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" asp-for="standardAccess">
                                <label class="form-check-label" asp-for="standardAccess">Standards administrator</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" asp-for="excutive">
                                <label class="form-check-label" asp-for="excutive">Standards administrator</label>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary">Add</button>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
