		.table td {
			text-align: center;
			vertical-align: middle;
			color: #333;
		}

		.platform-icon {
			color: #007bff;
			margin-right: 5px;
		}

		.table .action-column {
			text-align: right;
		}

		.table .action-column i {
			color: #666;
		}

		.table th,
