@using ACC.ViewModels
@model List<MemberVM>
<head>
    <title>Account Members</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
</head>
<body>
    <div class="d-flex">
        <div class="container-fluid p-4">
            <h2>Account Members</h2>
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addMemberModal">+ Add members</button>
            <div class="d-flex justify-content-between my-3">
                <input type="text" class="form-control w-25" placeholder="Search by name or email">
                <button class="btn btn-outline-secondary">Export</button>
            </div>

            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Status</th>
                        <th>Company</th>
                        <th>Default Role</th>
                        <th>Access Level</th>
                        <th>Added On</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var member in Model)
                    {
                        <tr id="row-@member.Id">
                            <td>@member.Name</td>
                            <td>@member.Status</td>
                            <td>@member.Company</td>
                            <td>@member.Role</td>
                            <td>
                                @foreach (var accessLevel in member.AccessLevels)
                                {
                                    <span>@accessLevel</span>
                                }
                            </td>
                            <td>@member.AddedOn</td>
                            <td>
                                <div class="btn-group">
                                    <button class="btn btn-light btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-three-dots-vertical"></i>
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li><button class="dropdown-item text-danger delete-btn" data-id="@member.Id">Delete</button></li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <partial name="PartialViews/_AddMemberPartialView" model="new InsertMemberVM()" />

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        $(document).ready(function () {
            $('.dropdown-toggle').dropdown();

            $(".delete-btn").click(function (e) {
                e.preventDefault(); 
                var memberId = $(this).data("id");
                if (confirm("Are you sure you want to delete this member?")) {
                    $.ajax({
                        url: "/Member/Delete/" + memberId,
                        type: "POST",
                        success: function () {
                            $("#row-" + memberId).remove();
                        },
                        error: function () {
                            alert("Failed to delete the member.");
                        }
                    });
                }
            });
        });
    </script>
</body>