@{
    ViewBag.Title = "Upload Document";
    var folderId = ViewBag.FolderId;
    var projectId = ViewBag.ProjectId;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-4">
    <h2>Upload Document</h2>

    @if (TempData["Error"] != null)
    {
        <div id="fileError" class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <form asp-action="Upload" method="post" enctype="multipart/form-data">
        <input type="hidden" name="folderId" value="@folderId" />
        <input type="hidden" name="projectId" value="@projectId" />
        <div class="mb-3">
            <label for="file" class="form-label">Select File (PDF, DOCX, JPG, PNG, max 10MB)</label>
            <input type="file" name="file" id="file" class="form-control" required />
        </div>
        <button id="fileInput" type="submit" class="btn btn-primary">Upload</button>
        <a asp-action="Index" asp-route-id="@projectId"  class="btn btn-secondary">Cancel</a>
    </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    const fileInput = document.getElementById("fileInput");
    const fileError = document.getElementById("fileError");
    const uploadBtn = document.getElementById("uploadBtn");

      const iso19650Pattern = /^[A-Z0-9]{2,}-[A-Z0-9]{2,}-[A-Z0-9]{2,}-[A-Z0-9]{2,}-[A-Z]{2}-[A-Z0-9]{4,}-[A-Z0-9]{4,}$/i;

    fileInput.addEventListener("change", function () {
        const file = this.files[0];
        if (!file) return;

        const fileName = file.name.split(".")[0];

        if (!iso19650Pattern.test(fileName)) {
            fileError.innerText = "Invalid file name. Example: P01-ABC-ZZ-00-DR-A-1234-0001.pdf";
            fileError.style.display = "inline";
            uploadBtn.disabled = true;
        } else {
            fileError.style.display = "none";
            uploadBtn.disabled = false;
        }
    });
</script>