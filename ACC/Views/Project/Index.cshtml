<body>
	<div class="d-flex">
		<div class="container-fluid p-4">
			<div class="header-div">
				<h2>Projects</h2>
			</div>

			<div class="nav-links mb-3">
				<a href="#" class="active">Active</a>
				<a href="#">Archived</a>
			</div>

			<!-- Buttons and Search -->
			<div class="d-flex justify-content-between button-group">
				<div>
					<button class="btn btn-primary me-2" data-bs-toggle="modal" data-bs-target="#addMemberModal">+ Create Project</button>
					<i class="fas fa-info-circle" style="color: #666;"></i>
				</div>
				<div class="search-container">
					<i class="fa-solid fa-magnifying-glass search-icon"></i>
					<input type="text" class="form-control" placeholder=" Search">
				</div>
			</div>

			<!-- Table -->
			<table class="table table-bordered">
				<thead>
					<tr>
						<th>Name</th>
						<th>Number</th>
						<th>Project Type</th>
						<th>Project Value</th>
						<th>Start Date</th>
						<th>End Date</th>
						<th>Creation Datee</th>
						<th class="action-column"><i class="fa-solid fa-gear"></i></th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<td>@item.Name</td>
							<td>@item.ProjectNumber</td>
							<td>@item.ProjectType</td>
							<td>@item.ProjectValue</td>
							<td>@item.StartDate</td>
							<td>@item.EndDate</td>
							<td>@item.CreationDate</td>
							<td>
								<i class="fa-regular fa-circle-ellipsis-vertical"></i>
							</td>
						</tr>
					}
				</tbody>
			</table>

